<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/side_outer"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <TextView
                android:id="@+id/pageName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="메뉴 수정"
                android:gravity="center"
                android:textSize="28dp"
                android:textStyle="bold"
                android:background="@drawable/side_top_outer">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/menuNum"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="메뉴 번호"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/insertMenuNum"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="메뉴 번호"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/newMenuN"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="메뉴 이름"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/insertNewMenuN"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="메뉴 이름"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/newMenuP"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="메뉴 가격"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/insertNewMenuP"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="메뉴 가격"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="설        명"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/insertNewDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="메뉴 설명"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/categorySpinner"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/black" />

                        <Switch
                            android:id="@+id/stateSwitch"
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:text="품절현황"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/side_outer"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            tools:srcCompat="@tools:sample/avatars" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/imgPathTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/upLoadBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="이미지파일 업로드"/>
                    </LinearLayout>


                    <Switch
                        android:id="@+id/optSwitch01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Size 옵션 1"/>
                    <LinearLayout
                        android:id="@+id/optLayout01_01"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optSize01_1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="사  이  즈"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditSize01_1"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="사이즈"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optLayout01_02"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optPrice01_2"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="가        격"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditPrice01_2"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="가격"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/optSwitch02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Size 옵션 2"/>
                    <LinearLayout
                        android:id="@+id/optLayout02_01"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optSize02_1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="사  이  즈"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditSize02_1"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="사이즈"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optLayout02_02"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optPrice02_2"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="가        격"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditPrice02_2"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="가격"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/optSwitch03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Size 옵션 3"/>
                    <LinearLayout
                        android:id="@+id/optLayout03_01"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optSize03_1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="사  이  즈"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditSize03_1"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="사이즈"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optLayout03_02"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optPrice03_2"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="가        격"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditPrice03_2"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="가격"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/optSwitch04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Kind 옵션 1"/>
                    <LinearLayout
                        android:id="@+id/optLayout04_01"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optKind04_1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="종         류"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditKind04_1"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="종류"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optLayout04_02"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optPrice04_2"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="가        격"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditPrice04_2"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="가격"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/optSwitch05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Kind 옵션 1"/>
                    <LinearLayout
                        android:id="@+id/optLayout05_01"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optKind05_1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="종         류"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditKind05_1"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="종류"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/optLayout05_02"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/optPrice05_2"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="가        격"
                            android:textColor="@color/black" />

                        <EditText
                            android:id="@+id/optEditPrice05_2"
                            android:layout_width="wrap_content"
                            android:layout_height="56dp"
                            android:layout_marginLeft="20dp"
                            android:ems="10"
                            android:hint="가격"
                            android:inputType="textPersonName"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/side_bottoml_outer"
                android:id="@+id/modifyBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="수정"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>


            <Button
                android:background="@drawable/side_bottomr_outer"
                android:id="@+id/deleteBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="삭제"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>